<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:fillViewport="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_image_height"
        android:layout_marginTop="@dimen/product_image_margin_top"
        android:src="@drawable/icon_cake" />

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/product_name_margin_top"
        android:text="@string/cake"
        android:textColor="@color/black60"
        android:textSize="@dimen/product_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/price_margin_top"
        android:text="@string/price_cake"
        android:textColor="@color/black60"
        android:textSize="@dimen/price_text_size" />

    <include
        android:id="@+id/googlePayButton"
        layout="@layout/buy_with_googlepay_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buy_button_height"
        android:layout_marginTop="@dimen/google_pay_button_margin_top"
        android:visibility="visible" />

</LinearLayout>